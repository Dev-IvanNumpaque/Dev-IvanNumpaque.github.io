---
import data from '../data/data.json';
const { title, subtitle, description, email } = data.contact;
const { github, linkedin, twitter } = data.socialLinks;
---

<section id="contact" class="section-common">
  <h2 class="numbered-heading">{title}</h2>
  <h3 class="contact-title">{subtitle}</h3>
  <p class="contact-description">
    {description}
  </p>
  <div class="contact-button">
